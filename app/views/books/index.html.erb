<div class="container">
 <% if flash[:notice] %>
    <div class="alert-light text-success" role="alert">
      <%= notice %>
    </div>
 <% end %>
<div class="row">
    <div class="col-md-3">
       <%= render 'list', post_images: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <tr>
          <% @books.each do |book| %>
          <td><%= link_to image_tag(book.user.get_profile_image(50,50)), user_path(book.user_id) %></td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
  </div>


