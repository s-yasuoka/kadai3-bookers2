<div class="container">
      <% if flash[:notice] %>
     <div class="alert-light text-success" role="alert">
      <%= notice %>
     </div>
     <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

   <% if @book.errors.any? %>
     <ul class="alert alert-light text-danger" role="alert">
      <h6 class="alert-heading">
        <%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:
      </h6>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
     </ul>
    <% end %>

  <h1>Editing Book</h1>
  <div>
    <%= form_with model:@book,local:true do |f| %>
    <div class="form-group">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <h4>Opinion</h4>
      <%= f.text_area :body, autofocus:true, maxlength: "200"  %>
    </div>
    <div class="form-group">
      <%= f.submit  "Update Book",class:"btn btn-success"%>
    </div>
    <% end %>
  </div>

      <%= link_to "Show",book_path(@book.id) %> | <%= link_to "Back",'/books' %>

    </div>
  </div>
</div>
