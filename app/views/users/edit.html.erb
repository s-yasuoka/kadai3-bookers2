<div class="container">
    <% if flash[:notice] %>
     <div class="alert-light text-success" role="alert">
      <%= notice %>
     </div>
     <% end %>
<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <!--アラート-->
      <% if @user.errors.any? %>
     <ul class="alert alert-light text-danger" role="alert">
      <h6 class="alert-heading">
        <%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:
      </h6>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
     </ul>
    <% end %>

    <%= form_with model:@user,local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus:true, id:"inputName" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label><br>
        <%= f.file_field:profile_image,accept:"image/*" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_field:introduction, autofocus:true, id:"inputIntroduction" %>
      </div>
      <div class="form-group">
        <%= f.submit  "Update User",class:"btn btn-secondary" %>
      </div>
    <% end %>


  </div>
</div>
</div>

