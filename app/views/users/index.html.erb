<div class="container">
    <% if flash[:notice] %>
     <div class="alert-light text-success" role="alert">
      <%= notice %>
     </div>
     <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', post_images: @books %>
    </div>
  <div class="col-md-8 offset-md-1">
  <h1>Users</h1>
    <table class="table">
      <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
       <% @users.each do |user| %>
      <tr>
      <td><%= image_tag user.get_profile_image(40,40) %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show",user_path(user.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  </div>
</div>