<div class="container">
  <% if flash[:notice] %>
    <div class="alert-light text-success" role="alert">
      <%= notice %>
    </div>
  <% end %>
  <div class="row">
   <%= render 'books/list', post_images: @books %>

    <div class="col-lg-8 offset-lg-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
          <th></th>
          <th>Title</th>
          <th>Opnion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
          <td><%= image_tag book.user.get_profile_image(40,40) %></td>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>


    </div>

  </div>
</div>